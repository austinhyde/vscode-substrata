	"tokenColors": [
		{
			"name": "Comment",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#5b5f71"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"string constant.other.placeholder", // e.g. format string placeholders
			],
			"settings": {
				"foreground": "#b5b4c9"
			}
		},
		{
			"name": "Function names/calls",
			"scope": [
				"entity.name.function",
				"meta.function-call",
				"variable.function",
				"support.function",
				"keyword.other.special-method"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#a0b9d8"
			}
		},
		{
			// Some languages (cough, python) treat all their arguments as sub-scoped from meta.function-call
			// and therefore _everything_ is italicized
			"name": "Function call arguments",
			"scope": [
				"meta.function-call.arguments",
			],
			"settings": {
				"fontStyle": ""
			},
		},
		{
			"name": "Special/Builtin Variables",
			"scope": [
				"variable.language", // "this" "self"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#a18daf"
			}
		},
		{
			"name": "Constants and Literals",
			"scope": [
				"constant.numeric", // number literal
				"constant.language", // "nil" "true"
				"support.constant",
				"constant.character",
				"constant.escape",
				"variable.parameter",
				"keyword.other.unit",
				"constant.other.color",
				"constant.other.rune", // rune literals in go
			],
			"settings": {
				"foreground": "#a18daf"
			}
		},
		{
			"name": "String, Symbols, Inherited Class, Markup Heading",
			"scope": [
				"string", // string literal
				"constant.other.symbol", // ":hello" in ruby
				"constant.other.key",
				"entity.other.inherited-class",
				"markup.heading",
				"markup.inserted.git_gutter",
				"meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js",
				"punctuation.definition.string",
				"string.regexp",
			],
			"settings": {
				"foreground": "#659ea2"
			}
		},
		{
			"name": "Escape Characters",
			"scope": [
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#7dc2c7"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword", // "func" "return"
				"keyword.control", // "match" "if" "while"
				"storage.modifier", // "pub" "volatile"
				"storage.type", // "struct"
			],
			"settings": {
				"foreground": "#8296b0"
			}
		},
		{
			"name": "Type Names",
			"scope": [
				"storage.class",
				"storage.type.core", // builtin types like "Option" in rust
				"entity.name.type", // "type <name> struct"
				"meta.type_params", // "Option<name>"
			],
			"settings": {
				"foreground": "#a18daf",
			}
		},
		{
			"name": "Meta/Pragma",
			"scope": [
				"meta.attribute", // "#[...]" in rust
			],
			"settings": {
				"foreground": "#6c6f82",
			}
		},
		{
			"name": "Operators, Punctuation",
			"scope": [
				"punctuation",
				"meta.tag",
				"punctuation.definition.tag",
				"punctuation.separator.inheritance.php",
				"punctuation.definition.tag.html",
				"punctuation.definition.tag.begin.html",
				"punctuation.definition.tag.end.html",
				"punctuation.section.embedded",
				"keyword.operator",
			],
			"settings": {
				"foreground": "#6c6f82"
			}
		},
		{
			"name": "Imports",
			"scope": [
				"entity.name.import", // 'import "..."' in go
			],
			"settings": {
				"foreground": "#659ea2"
			}
		},
		{
			"name": "Object keys, attributes, etc",
			"scope": [
				"entity.other.attribute-name", // html attribute
				"meta.object-literal.key", // { foo: "bar" }
				"support.type.property-name", // json keys, css properties
				"support.type.vendored.property-name", // css vendor properties
				"entity.name.tag.yaml", // yaml keys are not "property-name" for some unknown reason
			],
			"settings": {
				"foreground": "#8296b0",
			}
		},
		// Meta Features
		{
			"name": "URL",
			"scope": [
				"*url*",
				"*link*",
				"*uri*"
			],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Invalid",
			"scope": [
				"invalid",
				"invalid.illegal"
			],
			"settings": {
				"foreground": "#cf8164"
			}
		},
		// Language-specific
		{
			"name": "PHP Class, Support",
			"scope": [
				"support.orther.namespace.use.php",
				"meta.use.php",
				"support.other.namespace.php",
			],
			"settings": {
				"foreground": "#c6aed7"
			}
		},
		{
			"name": "HTML Tag",
			"scope": [
				"entity.name.tag",
				"meta.tag.sgml",
			],
			"settings": {
				"foreground": "#a18daf"
			}
		},
		{
			"name": "CSS Selectors",
			"scope": [
				"source.css entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#c6aed7"
			}
		},
		{
			"name": "CSS Sub-selectors",
			"scope": [
				"source.css entity.other.attribute-name.pseudo-class",
			],
			"settings": {
				"foreground": "#659ea2"
			}
		},
		{
			"name": "Markup - Bold",
			"scope": [
				"markup.bold",
			],
			"settings": {
				"fontStyle": "bold"
			},
		},
		{
			"name": "Markup - Italic",
			"scope": [
				"markup.italic",
			],
			"settings": {
				"fontStyle": "italic"
			},
		},
		{
			"name": "Markup - Bold-Italic",
			"scope": [
				"markup.bold markup.italic",
				"markup.italic markup.bold",
				"markup.quote markup.bold",
				"markup.bold markup.italic string",
				"markup.italic markup.bold string",
				"markup.quote markup.bold string"
			],
			"settings": {
				"fontStyle": "bold italic",
			}
		},
		{
			"name": "Markup - Code",
			"scope": [
				"markup.inline.raw",
				"markup.fenced_code.block",
				"markup.raw.block",
			],
			"settings": {
				"foreground": "#6c6f82",
			}
		},
		{
			"name": "Markup - Link",
			"scope": [
				"string.other.link.title.markdown",
				"meta.link.inline punctuation.definition.string",
				"markup.underline.link",
			],
			"settings": {
				"foreground": "#8296b0",
			}
		},
		{
			"name": "Markup - Link (underline)",
			"scope": [
				"string.other.link.title.markdown",
			],
			"settings": {
				"foreground": "#8296b0",
				"fontStyle": "underline",
			}
		},
	]
}
